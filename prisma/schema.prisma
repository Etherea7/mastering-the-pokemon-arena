model PokemonSpreads {
  name          String
  generation    String
  battle_format String
  rating        Int
  year_month    String
  Nature        String
  hp_ev         Int
  atk_ev        Int
  def_ev        Int
  spatk_ev      Int
  spdef_ev      Int
  spd_ev        Int
  Usage         Float?

  @@id([name, generation, battle_format, rating, year_month, Nature, hp_ev, atk_ev, def_ev, spatk_ev, spdef_ev, spd_ev])
  @@index([Usage], map: "idx_spreads_usage")
  @@index([Nature], map: "idx_spreads_nature")
  @@map("pokemon_spreads")
}

model PokemonCounters {
  name                  String
  generation            String
  battle_format         String
  rating                Int
  year_month            String
  opp_pokemon           String
  Lose_Rate_Against_Opp Float?
  Mean                  Float?
  Std_Dev              Float?
  KO_Percent            Float?
  Switch_Percent        Float?

  @@id([name, generation, battle_format, rating, year_month, opp_pokemon])
  @@index([Lose_Rate_Against_Opp], map: "idx_counters_lose_rate")
  @@index([opp_pokemon], map: "idx_counters_opponent")
  @@map("pokemon_counters")
}
