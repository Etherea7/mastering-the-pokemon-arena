generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PokemonBase {
  id                Int      @id @default(autoincrement())
  name              String
  raw_count         Int?
  avg_weight        Float?
  viability_ceiling Int?
  generation        String
  battle_format     String
  rating            BigInt
  year_month        String

  @@map("pokemon_base")
}

model PokemonUsage {
  id            Int      @id @default(autoincrement())
  rank          Int?
  name          String
  usage_percent Float?
  raw_count     Int?
  raw_percent   Float?
  real_count    Int?
  real_percent  Float?
  year_month    String
  generation    String
  battle_format String
  rating        Int

  @@map("pokemon_usage")
}

model PokemonMoves {
  id            Int      @id @default(autoincrement())
  name          String
  generation    String
  battle_format String
  rating        BigInt
  year_month    String
  move          String
  usage         Float?

  @@map("pokemon_moves")
}

model PokemonAbilities {
  id            Int      @id @default(autoincrement())
  name          String
  generation    String
  battle_format String
  rating        Int
  year_month    String
  ability       String
  usage         Float?

  @@map("pokemon_abilities")
}

model PokemonItems {
  id            Int      @id @default(autoincrement())
  name          String
  generation    String
  battle_format String
  rating        Int
  year_month    String
  item          String
  usage         Float?

  @@map("pokemon_items")
}

model PokemonTeammates {
  id            Int      @id @default(autoincrement())
  name          String
  generation    String
  battle_format String
  rating        Int
  year_month    String
  teammate      String
  usage         Float?

  @@map("pokemon_teammates")
}

model PokemonSpreads {
  id            Int      @id @default(autoincrement())
  name          String
  generation    String
  battle_format String
  rating        Int
  year_month    String
  usage         Float?
  nature        String
  hp_ev         Int?
  atk_ev        Int?
  def_ev        Int?
  spatk_ev      Int?
  spdef_ev      Int?
  spd_ev        Int?

  @@map("pokemon_spreads")
}

model PokemonCounters {
  id                    Int      @id @default(autoincrement())
  name                  String
  generation           String
  battle_format        String
  rating               BigInt
  year_month           String
  opp_pokemon          String
  lose_rate_against_opp Float?
  mean                 Float?
  std_dev             Float?
  ko_percent          Float?
  switch_percent      Float?

  @@map("pokemon_counters")
}