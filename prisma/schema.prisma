  battle_format String
  rating        Int
  year_month    String
  Teammate      String
  Usage         Float?

  @@id([name, generation, battle_format, rating, year_month, Teammate])
  @@index([Usage], map: "idx_pokemon_teammates_usage")
  @@index([Teammate], map: "idx_pokemon_teammates_teammate")
  @@map("pokemon_teammates")
