  Ability       String
  Usage         Float?

  @@id([name, generation, battle_format, rating, year_month, Ability])
  @@index([Usage], map: "idx_pokemon_abilities_usage")
  @@index([Ability], map: "idx_pokemon_abilities_ability")
  @@map("pokemon_abilities")
}

model PokemonItems {
  name          String
  generation    String
  battle_format String
  rating        Int
  year_month    String
  Item          String
  Usage         Float?

  @@id([name, generation, battle_format, rating, year_month, Item])
  @@index([Usage], map: "idx_pokemon_items_usage")
  @@index([Item], map: "idx_pokemon_items_item")
  @@map("pokemon_items")
}

