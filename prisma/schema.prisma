generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./pokemon_data.db?connection_limit=1&connect_timeout=30&pool_timeout=30&socket_timeout=30&mode=readonly"
}

model PokemonBase {
  name              String
  generation        String
  battle_format     String
  rating            Int
  year_month        String
  raw_count         Int?
  avg_weight        Float?
  viability_ceiling Int?

  @@id([name, generation, battle_format, rating, year_month])
  @@index([viability_ceiling], map: "idx_base_viability")
  @@index([generation, battle_format], map: "idx_base_gen_format")
  @@index([name], map: "idx_base_name")
  @@map("pokemon_base")
}

model PokemonUsage {
  name          String
  generation    String
  battle_format String
  rating        Int
  year_month    String
  rank          Int?
  usage_percent Float?
  raw_count     Int?
  raw_percent   Float?
  real_count    Int?
  real_percent  Float?

  @@id([name, generation, battle_format, rating, year_month])
  @@index([usage_percent], map: "idx_usage_percent")
  @@index([rank], map: "idx_usage_rank")
  @@map("pokemon_usage")
}

model PokemonMoves {
  name          String
  generation    String
  battle_format String
  rating        Int
  year_month    String
  Move          String
  Usage         Float?

  @@id([name, generation, battle_format, rating, year_month, Move])
  @@index([Usage], map: "idx_pokemon_moves_usage")
  @@index([Move], map: "idx_pokemon_moves_move")
  @@map("pokemon_moves")
}

model PokemonAbilities {
  name          String
  generation    String
  battle_format String
  rating        Int
