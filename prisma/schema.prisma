  Usage         Float?

  @@id([name, generation, battle_format, rating, year_month, tera_type])
  @@index([Usage], map: "idx_pokemon_teratypes_usage")
  @@index([tera_type], map: "idx_pokemon_teratypes_tera_type")
  @@map("pokemon_teratypes")
